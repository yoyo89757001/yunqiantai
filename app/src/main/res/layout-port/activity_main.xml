<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    tools:context="megvii.testfacepass.ui.MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff000000"
        android:gravity="center">


        <megvii.testfacepass.camera.CameraPreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_gravity="center_vertical" />

        <megvii.testfacepass.view.FaceView
            android:id="@+id/fcview"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/settingid"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="#00000000" />


        <ImageView
            android:id="@+id/imview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_face_operation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:drawable/ic_menu_manage"
                android:clickable="true" />

            <ImageView
                android:id="@+id/btn_group_name"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:drawable/ic_menu_add"
                android:clickable="true" />

            <Button
                android:id="@+id/visible"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="314px"
                android:layout_gravity="bottom"
                android:background="#000000"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:visibility="gone">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stackFromBottom="true"
                    android:transcriptMode="alwaysScroll">

                    <!--<TextView-->
                    <!--android:id="@+id/tv_meg"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@android:color/white"-->
                    <!--android:textSize="20sp" />-->
                    <TextView
                        android:id="@+id/tv_meg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:id="@+id/recycler_view"-->
                    <!--/>-->
                </ScrollView>
            </LinearLayout>

            <Button
                android:layout_gravity="right"
                android:id="@+id/btn_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDKMode" />


        </LinearLayout>

    </FrameLayout>


    <TableLayout
        android:id="@+id/hud_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ijk_transparent_dark"
        android:padding="8dp" />

    <megvii.testfacepass.view.DBG_View
        android:layout_width="100dp"
        android:id="@+id/dabg"
        android:background="@color/colorBar_bg"
        android:layout_height="100dp" />

<megvii.testfacepass.ljkplay.widget.media.IjkVideoView
    android:id="@+id/ijkplayview"
    android:layout_width="wrap_content"
    android:layout_height="300dp"/>




</RelativeLayout>
