<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_marginRight="60px"
        android:background="@drawable/zidonghuoqu110"
        android:id="@+id/root_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="40px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="300px"
                android:id="@+id/touxiang"
                android:layout_marginLeft="80px"
                android:layout_marginStart="80px"
                android:scaleType="fitXY"
                android:layout_height="300px" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@+id/touxiang"
                android:gravity="center_vertical"
                android:layout_marginRight="60px"
                android:layout_marginLeft="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="50px"
                    android:textColor="@color/colorBar_bg"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/zhiwei"
                    android:textSize="40px"
                    android:layout_marginTop="2px"
                    android:textColor="@color/colorBar_bg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="40px"
                    android:layout_marginTop="10px"
                    android:textColor="@color/colorBar_bg2"
                    android:id="@+id/huanyinyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/gtgt"
                android:layout_below="@+id/touxiang"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="60px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20px"
                    android:text="消息提醒"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/xia_bgbg"
                    android:layout_marginLeft="30px"
                    android:layout_width="32px"
                    android:layout_height="32px" />

            </LinearLayout>

            <TextView
                android:layout_below="@+id/gtgt"
                android:paddingLeft="30px"
                android:layout_marginTop="30px"
                android:paddingTop="10px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="30px"
                android:paddingRight="50px"
                android:paddingBottom="40px"
                android:textSize="20px"
                android:textColor="@color/white"
                android:text="消息消息消息消息消息消息"
                android:background="@drawable/xiaoxi_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </RelativeLayout>



    </RelativeLayout>


</LinearLayout>