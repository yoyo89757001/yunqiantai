<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:clipChildren="false"
        android:id="@+id/root_rl"
        android:background="@drawable/jj_yg_bg"
        android:minHeight="620px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/touxiang"
            android:background="@drawable/zidonghuoqu_hui"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:scaleType="fitXY"
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/dangao"
        android:scaleType="fitXY"
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:gravity="center"
        android:layout_toRightOf="@+id/touxiang"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:textSize="50px"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/name"
            android:id="@+id/bumen"
            android:textSize="40px"
            android:layout_marginTop="30px"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/xiaoxi_ll"
        android:background="@drawable/xiaoxi_bg_jj"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_below="@+id/root_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/laba"
            android:tint="@color/huangse"
            android:layout_width="60px"
            android:layout_height="60px" />

        <TextView
            android:id="@+id/xiaoxi"
            android:textColor="@color/textcolor"
            android:textSize="26px"
            android:text="消息消息消息"
            android:layout_marginLeft="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


</RelativeLayout>